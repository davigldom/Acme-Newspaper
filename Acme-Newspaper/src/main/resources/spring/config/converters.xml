<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd		
		http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-4.0.xsd		
	">

	<util:list id="converters">
	
	<bean class="converters.ActorToStringConverter" />
	<bean class="converters.AuthorityToStringConverter" />
	<bean class="converters.UserAccountToStringConverter" />
	<bean class="converters.ArticleToStringConverter" />
	<bean class="converters.NewspaperToStringConverter" />
	<bean class="converters.SubscriptionToStringConverter" />
	<bean class="converters.VolumeSubscriptionToStringConverter" />
	<bean class="converters.VolumeToStringConverter" />
	<bean class="converters.AdvertisementToStringConverter" />
	<bean class="converters.FolderToStringConverter" />
	<bean class="converters.MessageToStringConverter" />
	
	<bean class="converters.StringToAdvertisementConverter" />
	<bean class="converters.StringToActorConverter" />
	<bean class="converters.StringToAuthorityConverter" />
	<bean class="converters.StringToUserAccountConverter" />
	<bean class="converters.StringToArticleConverter" />
	<bean class="converters.StringToNewspaperConverter" />
	<bean class="converters.StringToSubscriptionConverter" />
	<bean class="converters.StringToVolumeSubscriptionConverter" />
	<bean class="converters.StringToVolumeConverter" />
	<bean class="converters.StringToFolderConverter" />
	<bean class="converters.StringToMessageConverter" />
		
	</util:list>
	
</beans>